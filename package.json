{
  "name": "crypto-trading-bot",
  "version": "1.0.0",
  "description": "Advanced crypto trading bot with real and simulated trading modes",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist logs/*.log",
    "test": "echo \"Testing build...\" && npm run build && echo \"Build successful!\"",
    "download-data": "ts-node scripts/downloadHistoricalData.ts",
    "generate-sample-data": "ts-node scripts/generateSampleData.ts",
    "backtest-profitable": "ts-node src/scripts/runProfitableBacktest.ts",
    "backtest-5x": "ts-node scripts/run5xLeverageBacktest.ts",
    "backtest-leverage": "ts-node scripts/runLeverageBacktest.ts"
  },
  "keywords": ["crypto", "trading", "bot", "binance", "btc"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ccxt": "^4.2.25",
    "ws": "^8.16.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
